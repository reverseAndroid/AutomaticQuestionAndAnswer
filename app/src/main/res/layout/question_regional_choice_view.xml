<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/question_regional_choice_view_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/regional_choice_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/question_regional_choice_view_first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="选择分区"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <View
                android:id="@+id/question_regional_choice_view_first_v"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/question_regional_choice_view_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="选择分区"
                android:textSize="16dp"
                android:visibility="invisible" />

            <View
                android:id="@+id/question_regional_choice_view_second_v"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/question_regional_choice_view_third_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="选择分区"
                android:textSize="16dp"
                android:visibility="invisible" />

            <View
                android:id="@+id/question_regional_choice_view_third_v"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/question_regional_choice_view_rv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/question_regional_choice_view_ll" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="确定"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>